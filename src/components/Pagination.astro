---
import type { Page } from "astro";
import LinkButton from "./LinkButton.astro";
import type { CollectionEntry } from "astro:content";
import { TbChevronLeft, TbChevronRight } from "react-icons/tb";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav class="pagination-wrapper" aria-label="Pagination">
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        className={`flex items-center gap-2 px-4 py-2 rounded-lg border transition-all duration-200 focus-outline ${
          page.url.prev 
            ? "border-skin-line/30 bg-skin-card hover:border-skin-accent hover:text-skin-accent hover:shadow-sm" 
            : "border-transparent text-skin-base/30 cursor-not-allowed"
        }`}
        ariaLabel="Previous"
      >
        <TbChevronLeft className="w-5 h-5" />
        <span class="font-medium">Prev</span>
      </LinkButton>
      
      <div class="flex items-center text-sm font-medium text-skin-base/60 bg-skin-card px-3 py-1 rounded-md border border-skin-line/10 select-none">
        {page.currentPage} <span class="mx-1 opacity-50">/</span> {page.lastPage}
      </div>

      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        className={`flex items-center gap-2 px-4 py-2 rounded-lg border transition-all duration-200 focus-outline ${
          page.url.next 
            ? "border-skin-line/30 bg-skin-card hover:border-skin-accent hover:text-skin-accent hover:shadow-sm" 
            : "border-transparent text-skin-base/30 cursor-not-allowed"
        }`}
        ariaLabel="Next"
      >
        <span class="font-medium">Next</span>
        <TbChevronRight className="w-5 h-5" />
      </LinkButton>
    </nav>
  )
}

<style>
  .pagination-wrapper {
    @apply mb-8 mt-12 flex justify-center items-center gap-4;
  }
</style>
