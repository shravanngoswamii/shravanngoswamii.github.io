---
import { SITE } from "@config";
import Search from "./Search.astro";
import { TbMoon, TbSun, TbMenu2, TbX } from "react-icons/tb";

export interface Props {
  activeNav?: "projects" | "resume" | "blog" | "tags" | "publications";
}

const { activeNav } = Astro.props;
---

<!-- 
  PREMIUM NAVIGATION SYSTEM
  Desktop: Top Floating Pill (Unchanged)
  Mobile: Double-Decker Technical Console (Solves navigability & density)
-->

<!-- DESKTOP HEADER (Hidden on Mobile) -->
<header id="main-header" class="hidden sm:flex fixed top-0 left-0 right-0 z-40 justify-center pointer-events-none transition-transform duration-300">
  <div class="mt-6 pointer-events-auto">
    <div class="
      group relative flex items-center gap-1 p-1.5 pr-3
      rounded-full 
      bg-skin-fill/80 backdrop-blur-xl supports-[backdrop-filter]:bg-skin-fill/60
      border border-skin-line/10 
      shadow-2xl shadow-skin-text-base/5
      transition-all duration-500 ease-out
      hover:scale-[1.01] hover:bg-skin-fill/95 hover:border-skin-line/20 hover:shadow-skin-text-base/10
    ">
      
      <!-- LOGO -->
      <a href="/" class="flex items-center justify-center w-10 h-10 rounded-full bg-skin-card text-skin-base font-serif font-bold text-lg hover:bg-skin-inverted hover:text-skin-inverted transition-colors duration-300 shadow-sm border border-skin-line/10">
        SG
      </a>

      <div class="w-px h-4 bg-skin-line/20 mx-2"></div>

      <!-- NAV LINKS -->
      <nav class="flex items-center">
        <ul class="flex items-center gap-1 text-xs font-mono uppercase tracking-widest font-medium">
          <li><a href="/blog/" class={`px-4 py-2 rounded-full transition-all duration-300 ${activeNav === "blog" ? "bg-skin-inverted text-skin-inverted shadow-md" : "text-skin-base/60 hover:text-skin-base hover:bg-skin-card-muted"}`}>Journal</a></li>
          <li><a href="/projects/" class={`px-4 py-2 rounded-full transition-all duration-300 ${activeNav === "projects" ? "bg-skin-inverted text-skin-inverted shadow-md" : "text-skin-base/60 hover:text-skin-base hover:bg-skin-card-muted"}`}>Work</a></li>
          <li><a href="/publications/" class={`px-4 py-2 rounded-full transition-all duration-300 ${activeNav === "publications" ? "bg-skin-inverted text-skin-inverted shadow-md" : "text-skin-base/60 hover:text-skin-base hover:bg-skin-card-muted"}`}>Research</a></li>
          <li><a href="/resume/" class={`px-4 py-2 rounded-full transition-all duration-300 ${activeNav === "resume" ? "bg-skin-inverted text-skin-inverted shadow-md" : "text-skin-base/60 hover:text-skin-base hover:bg-skin-card-muted"}`}>CV</a></li>
        </ul>
      </nav>

      <div class="w-px h-4 bg-skin-line/20 mx-2"></div>

      <!-- UTILITIES -->
      <div class="flex items-center gap-1">
        <button id="search-btn-d" class="flex items-center justify-center w-8 h-8 rounded-full text-skin-base/60 hover:text-skin-base hover:bg-skin-card-muted transition-all" aria-label="Search">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
        </button>
        {SITE.lightAndDarkMode && (
            <button id="theme-btn-d" class="flex items-center justify-center w-8 h-8 rounded-full text-skin-base/60 hover:text-skin-base hover:bg-skin-card-muted transition-all" aria-label="Toggle theme">
                <TbMoon id="moon-svg-d" className="w-4 h-4" /><TbSun id="sun-svg-d" className="w-4 h-4" />
            </button>
        )}
      </div>
    </div>
  </div>
</header>


<!-- MOBILE HEADER -->
<header id="mobile-header" class="sm:hidden fixed top-0 left-0 right-0 z-50 transition-transform duration-300">
  <div class="bg-skin-fill/90 backdrop-blur-lg border-b border-skin-line/10">
    <div class="flex items-center justify-between h-16 px-4">
      <!-- Logo -->
      <a href="/" class="font-serif text-xl font-bold text-skin-base">SG</a>
      
      <!-- Right Controls -->
      <div class="flex items-center gap-2 relative">
        {SITE.lightAndDarkMode && (
          <button id="theme-btn-m" class="w-10 h-10 flex items-center justify-center text-skin-base/70 hover:text-skin-base transition-colors rounded-lg hover:bg-skin-card" aria-label="Toggle theme">
            <TbMoon id="moon-svg-m" className="w-5 h-5" />
            <TbSun id="sun-svg-m" className="w-5 h-5" />
          </button>
        )}

        <button id="mobile-menu-toggle" class="w-10 h-10 flex items-center justify-center text-skin-base hover:bg-skin-card rounded-lg transition-all" aria-label="Menu">
          <TbMenu2 id="menu-icon" className="w-6 h-6 transition-transform" />
          <TbX id="close-icon" className="w-6 h-6 hidden transition-transform" />
        </button>

        <!-- Dropdown Menu -->
        <div id="mobile-dropdown" class="absolute top-full right-0 mt-3 w-56 opacity-0 invisible scale-95 origin-top-right transition-all duration-300 ease-out">
          <div class="bg-skin-card/95 backdrop-blur-xl border border-skin-line/20 shadow-2xl overflow-hidden" style="border-radius: 1rem 1rem 2rem 1rem;">
            <div class="flex items-center justify-between px-4 pt-3 pb-1">
              <span class="text-[10px] font-mono uppercase tracking-widest text-skin-base/40">Menu</span>
              <button id="search-btn-m" class="w-8 h-8 flex items-center justify-center text-skin-base/50 hover:text-skin-base transition-colors rounded-lg hover:bg-skin-fill/50" aria-label="Search">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
              </button>
            </div>
            <nav class="p-3 pt-2">
              <ul class="space-y-1">
                <li>
                  <a href="/blog/" class={`block px-4 py-2.5 rounded-lg text-sm transition-all ${activeNav === "blog" ? "bg-skin-fill text-skin-base font-medium" : "text-skin-base/70 hover:bg-skin-fill/50 hover:text-skin-base"}`}>
                    Journal
                  </a>
                </li>
                <li>
                  <a href="/projects/" class={`block px-4 py-2.5 rounded-lg text-sm transition-all ${activeNav === "projects" ? "bg-skin-fill text-skin-base font-medium" : "text-skin-base/70 hover:bg-skin-fill/50 hover:text-skin-base"}`}>
                    Work
                  </a>
                </li>
                <li>
                  <a href="/publications/" class={`block px-4 py-2.5 rounded-lg text-sm transition-all ${activeNav === "publications" ? "bg-skin-fill text-skin-base font-medium" : "text-skin-base/70 hover:bg-skin-fill/50 hover:text-skin-base"}`}>
                    Research
                  </a>
                </li>
                <li>
                  <a href="/resume/" class={`block px-4 py-2.5 rounded-lg text-sm transition-all ${activeNav === "resume" ? "bg-skin-fill text-skin-base font-medium" : "text-skin-base/70 hover:bg-skin-fill/50 hover:text-skin-base"}`}>
                    CV
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Backdrop for dropdown -->
<div id="mobile-backdrop" class="sm:hidden fixed inset-0 z-40 bg-black/0 backdrop-blur-0 pointer-events-none transition-all duration-300"></div>

<Search />

<script>
  function setupThemeToggle() {
    const handleThemeClick = () => {
      const html = document.documentElement;
      const currentTheme = html.getAttribute("data-theme");
      const nextTheme = currentTheme === "dark" ? "light" : "dark";

      html.classList.add("theme-transition");
      html.setAttribute("data-theme", nextTheme);
      localStorage.setItem("theme", nextTheme);

      setTimeout(() => html.classList.remove("theme-transition"), 350);
    };

    document.querySelector("#theme-btn-d")?.addEventListener("click", handleThemeClick);
    document.querySelector("#theme-btn-m")?.addEventListener("click", handleThemeClick);
  }

  setupThemeToggle();
  document.addEventListener("astro:after-swap", setupThemeToggle);
</script>

<script>
  function setupScrollNav() {
    const desktop = document.querySelector("#main-header") as HTMLElement;
    const mobile = document.querySelector("#mobile-header") as HTMLElement;
    let lastY = window.scrollY;
    let ticking = false;

    function onScroll() {
      const y = window.scrollY;
      const down = y > lastY && y > 80;
      lastY = y;

      if (down) {
        desktop?.style.setProperty("transform", "translateY(-100%)");
        mobile?.style.setProperty("transform", "translateY(-100%)");
      } else {
        desktop?.style.setProperty("transform", "translateY(0)");
        mobile?.style.setProperty("transform", "translateY(0)");
      }
      ticking = false;
    }

    window.addEventListener("scroll", () => {
      if (!ticking) {
        requestAnimationFrame(onScroll);
        ticking = true;
      }
    }, { passive: true });
  }

  setupScrollNav();
  document.addEventListener("astro:after-swap", setupScrollNav);
</script>

<script>
  function setupSearchButtons() {
    const openSearch = () => document.dispatchEvent(new CustomEvent("open-search"));
    document.querySelector("#search-btn-d")?.addEventListener("click", openSearch);
    document.querySelector("#search-btn-m")?.addEventListener("click", openSearch);
  }

  setupSearchButtons();
  document.addEventListener("astro:after-swap", setupSearchButtons);
</script>

<script>
  function setupMobileDropdown() {
    const toggle = document.querySelector("#mobile-menu-toggle");
    const dropdown = document.querySelector("#mobile-dropdown");
    const backdrop = document.querySelector("#mobile-backdrop");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");
    let isOpen = false;

    function openDropdown() {
      isOpen = true;
      dropdown?.classList.remove("opacity-0", "invisible", "scale-95");
      dropdown?.classList.add("opacity-100", "visible", "scale-100");
      backdrop?.classList.remove("pointer-events-none", "bg-black/0");
      backdrop?.classList.add("pointer-events-auto", "bg-black/20");
      menuIcon?.classList.add("hidden", "rotate-90");
      closeIcon?.classList.remove("hidden");
    }

    function closeDropdown() {
      isOpen = false;
      dropdown?.classList.remove("opacity-100", "visible", "scale-100");
      dropdown?.classList.add("opacity-0", "invisible", "scale-95");
      backdrop?.classList.remove("pointer-events-auto", "bg-black/20");
      backdrop?.classList.add("pointer-events-none", "bg-black/0");
      menuIcon?.classList.remove("hidden", "rotate-90");
      closeIcon?.classList.add("hidden");
    }

    toggle?.addEventListener("click", (e) => {
      e.stopPropagation();
      if (isOpen) closeDropdown();
      else openDropdown();
    });

    backdrop?.addEventListener("click", closeDropdown);

    // Close on navigation
    dropdown?.querySelectorAll("a").forEach(link => {
      link.addEventListener("click", () => {
        setTimeout(closeDropdown, 100);
      });
    });

    // Close on outside click
    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (isOpen && !dropdown?.contains(target) && !toggle?.contains(target)) {
        closeDropdown();
      }
    });
  }

  setupMobileDropdown();
  document.addEventListener("astro:after-swap", setupMobileDropdown);
</script>
