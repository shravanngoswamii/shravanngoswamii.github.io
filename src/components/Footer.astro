---
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class={`w-full ${noMarginTop ? "" : "mt-auto"}`}>
  <div class="w-full h-[1px] bg-skin-line/30 mb-8"></div>
  
  <div class="flex flex-col items-center justify-between py-8 gap-6 sm:flex-row-reverse">
    <div class="opacity-70 scale-90">
      <Socials centered />
    </div>
    
    <div class="flex flex-col items-center sm:items-start gap-1 text-xs font-mono uppercase tracking-widest text-skin-base/40">
      <span>&copy; {currentYear} Shravan Goswami.</span>
      <span class="opacity-50">All rights reserved.</span>
    </div>
  </div>
</footer>
