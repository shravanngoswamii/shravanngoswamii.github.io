---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { TbArrowDown, TbArrowRight } from "react-icons/tb";
import HeroBackground from "@components/HeroBackground";

const posts = await getCollection("blog");
const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header /> 
  
  <main id="main-content" class="px-4 sm:px-6">
    
    <section class="min-h-[85svh] flex flex-col justify-center relative border-x border-skin-line/10 mt-20 sm:mt-8 mb-8 overflow-hidden">
      
      <div class="absolute inset-0 -z-10 bg-skin-fill/50">
         <HeroBackground client:load />
      </div>

      <div class="absolute top-0 left-0 w-8 h-8 border-t border-l border-skin-text-base/30"></div>
      <div class="absolute top-0 right-0 w-8 h-8 border-t border-r border-skin-text-base/30"></div>
      <div class="absolute bottom-0 left-0 w-8 h-8 border-b border-l border-skin-text-base/30"></div>
      <div class="absolute bottom-0 right-0 w-8 h-8 border-b border-r border-skin-text-base/30"></div>

      <div class="absolute top-0 left-0 w-full flex justify-between items-start p-6 font-mono text-[10px] uppercase tracking-widest text-skin-base/50">
         <div class="flex flex-col gap-1">
           <span>Building things that work</span>
         </div>
         <div class="text-right flex flex-col gap-1">
           <span>Available for collaboration</span>
         </div>
      </div>

      <div class="relative z-10 w-full max-w-5xl mx-auto px-6 py-20 flex flex-col items-center text-center">
         
         <div class="inline-flex items-center gap-3 px-3 py-1 border border-skin-line/30 rounded-full bg-skin-fill/80 backdrop-blur-sm mb-8">
            <span class="font-mono text-[10px] uppercase tracking-widest text-skin-base/70">Human who actually thinks!</span>
         </div>

         <h1 class="flex flex-col items-center justify-center font-serif text-6xl sm:text-8xl lg:text-9xl leading-[0.85] text-skin-base tracking-tighter">
            <span class="relative">
              SHRAVAN
              <span class="absolute top-1/2 left-0 w-full h-[1px] bg-skin-line/0"></span>
            </span>
            <span class="text-skin-base/20 font-sans font-bold tracking-tight italic" style="-webkit-text-stroke: 1px rgba(var(--color-text-base), 0.3); color: transparent;">
              GOSWAMI
            </span>
         </h1>

         <p class="mt-8 max-w-lg text-sm sm:text-base font-normal leading-relaxed text-skin-base/90 bg-skin-fill/60 backdrop-blur-sm p-4 border border-skin-line/10 rounded-sm">
           Research Assistant at the University of Cambridge, GSoC 2025 Contributor with The Julia Language, 
           and pre-final year B.Tech. Computer Science & Engineering student.
         </p>

         <div class="mt-10 flex flex-col sm:flex-row items-center gap-6">
            <LinkButton href="/projects" className="px-8 py-3 bg-skin-inverted text-skin-inverted hover:bg-skin-accent hover:text-skin-inverted transition-colors font-mono text-xs uppercase tracking-widest rounded-sm">
               View Projects
            </LinkButton>
            <a href="https://github.com/sponsors/shravanngoswamii?o=esb" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 border border-skin-line/40 hover:border-skin-base/60 text-skin-base/70 hover:text-skin-base transition-all font-mono text-xs uppercase tracking-widest rounded-sm">
               ❤️ Sponsor
            </a>
            <div class="h-[1px] w-12 bg-skin-line/30 hidden sm:block"></div>
            <div class="scale-90 opacity-70 hover:opacity-100 transition-opacity">
               <Socials />
            </div>
         </div>

      </div>

    </section>


    {featuredPosts.length > 0 && (
      <section class="py-24 sm:py-32">
        <div class="flex items-end justify-between mb-12 border-b border-skin-line/20 pb-4">
           <h2 class="font-mono text-xs uppercase tracking-widest text-skin-base">Featured Posts</h2>
           <span class="font-mono text-[10px] text-skin-base/40">{featuredPosts.length} {featuredPosts.length === 1 ? 'post' : 'posts'}</span>
        </div>
        
        <div class="flex flex-col">
          {featuredPosts.map(({ data, slug }, index) => (
            <Card
              href={`/blog/${slug}/`}
              frontmatter={data}
              index={index + 1}
              secHeading={false}
            />
          ))}
        </div>

        <div class="mt-12 flex justify-end">
           <LinkButton href="/blog" className="group flex items-center gap-2 text-xs font-mono uppercase tracking-widest text-skin-base/60 hover:text-skin-base transition-colors border-b border-transparent hover:border-skin-base pb-0.5">
              All Posts <TbArrowRight className="w-3 h-3 group-hover:translate-x-1 transition-transform" />
           </LinkButton>
        </div>
      </section>
    )}


    <section class="grid grid-cols-1 lg:grid-cols-12 gap-12 border-t border-skin-line/20 pt-16 pb-24">
      
      <div class="lg:col-span-6 corner-brackets relative">
        <span class="font-mono text-[10px] uppercase tracking-widest text-skin-base/40 mb-8 block">Recent Posts</span>
        
        <ul class="space-y-8">
           {recentPosts.slice(0, 3).map(({ data, slug }) => (
             <li>
               <a href={`/blog/${slug}/`} class="group block">
                 <div class="flex items-center gap-3 mb-2">
                   <span class="w-1.5 h-1.5 rounded-full bg-skin-line group-hover:bg-skin-accent transition-colors"></span>
                   <span class="font-mono text-[10px] text-skin-base/40 group-hover:text-skin-base transition-colors">
                     {data.pubDatetime.toLocaleDateString('en-US', {month: 'short', day: '2-digit'})}
                   </span>
                 </div>
                 <h4 class="font-serif text-2xl text-skin-base transition-all">
                   {data.title}
                 </h4>
               </a>
             </li>
           ))}
        </ul>

        <div class="mt-12">
           <a href="/blog/" class="group inline-flex items-center gap-2 text-xs font-mono uppercase tracking-widest text-skin-base/40 hover:text-skin-base transition-colors">
             All Posts <TbArrowRight className="w-3 h-3 group-hover:translate-x-1 transition-transform" />
           </a>
        </div>
      </div>

      <div class="lg:col-span-5 lg:col-start-8 flex flex-col justify-between bg-skin-card-muted/20 p-8 rounded-sm border border-skin-line/10">
         <div>
            <span class="font-mono text-[10px] uppercase tracking-widest text-skin-base/40 mb-2 block">Get in Touch</span>
            <h3 class="font-serif text-3xl mb-4 text-skin-base">Open to Collaboration</h3>
            <p class="text-sm font-normal text-skin-base/80 leading-relaxed max-w-sm">
              Interested in research collaborations, open-source contributions, and high-performance computing projects.
            </p>
         </div>

         <div class="flex flex-col gap-4 mt-16">
            <LinkButton href="/resume" className="flex items-center justify-between w-full px-5 py-4 border border-skin-line/40 hover:bg-skin-inverted hover:text-skin-inverted hover:border-skin-inverted transition-all duration-300 group">
               <span class="text-xs font-mono uppercase tracking-widest">View CV</span>
               <TbArrowDown className="w-4 h-4 group-hover:translate-y-1 transition-transform" />
            </LinkButton>
            
            <div class="flex justify-center mt-2">
              <a href="mailto:contact@shravangoswami.com" class="text-[10px] font-mono text-skin-base/40 hover:text-skin-base transition-colors border-b border-transparent hover:border-skin-base/40 uppercase tracking-widest">
                contact@shravangoswami.com
              </a>
            </div>
         </div>
      </div>

    </section>

  </main>

  <Footer />
</Layout>
